<Page x:Class="EventApp.PageFolder.AddFolder.AddUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventApp.PageFolder.AddFolder"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="AddUser" Background="#4A4A4A">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добавить пользователя"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Style="{StaticResource TitleText}"/>

        <StackPanel Grid.Row="1" Margin="0,10">
            <TextBlock Text="Имя:" Style="{StaticResource StandartText}" FontSize="14"/>
            <TextBox x:Name="FirstNameTb" Margin="0,5" Style="{StaticResource CustomUnderlinedTextBox}" FontSize="14"/>

            <TextBlock Text="Фамилия:" Margin="0,10,0,0" Style="{StaticResource StandartText}" FontSize="14"/>
            <TextBox x:Name="LastNameTb" Margin="0,5" Style="{StaticResource CustomUnderlinedTextBox}" FontSize="14"/>

            <TextBlock Text="Отчество:" Margin="0,10,0,0" Style="{StaticResource StandartText}" FontSize="14"/>
            <TextBox x:Name="MiddleNameTb" Margin="0,5" Style="{StaticResource CustomUnderlinedTextBox}" FontSize="14"/>

            <TextBlock Text="Логин:" Margin="0,10,0,0" Style="{StaticResource StandartText}" FontSize="14"/>
            <TextBox x:Name="LoginTb" Margin="0,5" Style="{StaticResource CustomUnderlinedTextBox}" FontSize="14"/>

            <TextBlock Text="Пароль:" Margin="0,10,0,0" Style="{StaticResource StandartText}" FontSize="14"/>
            <PasswordBox x:Name="PasswordPb" Margin="0,5" Style="{StaticResource CustomUnderlinedPasswordBox}" FontSize="14"/>

            <TextBlock Text="Email:" Margin="0,10,0,0" Style="{StaticResource StandartText}" FontSize="14"/>
            <TextBox x:Name="EmailTb" Margin="0,5" Style="{StaticResource CustomUnderlinedTextBox}" FontSize="14"/>

            <TextBlock Text="Телефон:" Margin="0,10,0,0" Style="{StaticResource StandartText}" FontSize="14"/>
            <TextBox x:Name="PhoneTb" Margin="0,5" Style="{StaticResource CustomUnderlinedTextBox}" FontSize="14"/>

            <TextBlock Text="Роль:" Margin="0,10,0,0" Style="{StaticResource StandartText}" FontSize="14"/>
            <ComboBox x:Name="RoleCb" Margin="0,5" Style="{StaticResource CustomUnderlinedComboBox}"
                      DisplayMemberPath="RoleName"
                      SelectedValuePath="IdRole"
                      SelectedItem="{Binding SelectedRole}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Content="Отмена" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
