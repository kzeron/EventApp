<Page x:Class="EventApp.PageFolder.EditFolder.EditEvent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="EditEvent"
      Background="#4A4A4A">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Изменить мероприятие"
                   HorizontalAlignment="Center"
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Style="{StaticResource MaterialDesignScrollViewer}">
            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="Название:" Style="{StaticResource StandartText}" FontSize="14"/>
                <TextBox x:Name="TitleTb" Style="{StaticResource CustomUnderlinedTextBox}" Margin="0,5" FontSize="14"/>

                <TextBlock Text="Описание:" Style="{StaticResource StandartText}" FontSize="14" Margin="0,10,0,0"/>
                <TextBox x:Name="DescriptionTb" Style="{StaticResource CustomUnderlinedTextBox}" Margin="0,5" Height="60" FontSize="14" TextWrapping="Wrap" AcceptsReturn="True"/>

                <TextBlock Text="Дата начала:" Style="{StaticResource StandartText}" FontSize="14" Margin="0,10,0,0"/>
                <DatePicker x:Name="StartDatePicker" Style="{StaticResource CustomCombinedUnderlinedDatePicker}" Margin="0,5" FontSize="14"/>

                <TextBlock Text="Дата окончания:" Style="{StaticResource StandartText}" FontSize="14" Margin="0,10,0,0"/>
                <DatePicker x:Name="EndDatePicker" Style="{StaticResource CustomCombinedUnderlinedDatePicker}" Margin="0,5" FontSize="14"/>

                <TextBlock Text="Место проведения:" Style="{StaticResource StandartText}" FontSize="14" Margin="0,10,0,0"/>
                <ComboBox x:Name="LocationCb"
                          Style="{StaticResource CustomUnderlinedComboBox}"
                          Margin="0,5"
                          FontSize="14"
                          DisplayMemberPath="LocationName"
                          SelectedValuePath="IdLocation"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <Button Content="Отмена"
                    Click="CancelButton_Click"
                    Background="Transparent"
                    BorderBrush="White"/>
        </StackPanel>
    </Grid>
</Page>
