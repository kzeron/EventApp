<Page x:Class="EventApp.PageFolder.ListFolder.ListUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:EventApp.PageFolder.ListFolder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListUser">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопка «Добавить пользователя» -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <!-- Поисковая строка -->
            <TextBox x:Name="SearchTextBox" 
         Grid.Row="0"
         Margin="10,5"
         materialDesign:HintAssist.Hint="Поиск пользователей..."
         TextChanged="SearchTextBox_TextChanged"
         Style="{StaticResource CustomUnderlinedTextBox}">
            </TextBox>
            <Button x:Name="AddUserButton" 
                    Content="Добавить пользователя" 
                    Click="AddUserButton_Click"
                    Background="Transparent" Foreground="White"
                    BorderBrush="White" Padding="10,5"/>
        </StackPanel>
        <ListBox x:Name="UsersListBox" Margin="10" Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Gray" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <!-- Фото пользователя -->
                            <Image Source="{Binding Photo}" 
                                   Width="50" Height="50" 
                                   Stretch="UniformToFill" 
                                   Margin="0,0,10,0"/>
                            <StackPanel Orientation="Vertical">
                                <!-- Логин пользователя -->
                                <TextBlock Text="{Binding Login}" 
                                           Style="{StaticResource StandartText}"/>

                                <!-- ФИО -->
                                <TextBlock
                                           Style="{StaticResource StandartText}">
                                    <Run Text="ФИО: " FontWeight="Bold"/>
                                    <Run Text="{Binding FullName, Mode=OneWay}"/>
                                </TextBlock>

                                <!-- Email -->
                                <TextBlock 
                                           Style="{StaticResource StandartText}">
                                    <Run Text="Email: " FontWeight="Bold"/>
                                    <Run Text="{Binding Email}"/>
                                </TextBlock>

                                <!-- Телефон -->
                                <TextBlock 
                                           Style="{StaticResource StandartText}">
                                    <Run Text="Телефон: " FontWeight="Bold"/>
                                    <Run Text="{Binding Phone}"/>
                                </TextBlock>

                                <!-- Статус -->
                                <TextBlock 
                                           Style="{StaticResource StandartText}">
                                    <Run Text="Статус: " FontWeight="Bold"/>
                                    <Run Text="{Binding StatusName}"/>
                                </TextBlock>

                                <!-- Кнопки управления -->
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button Content="Сменить статус" Margin="5" Click="ChangeStatusButton_Click">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Работает" Click="ChangeStatus_Working_Click"/>
                                                <MenuItem Header="Уволен" Click="ChangeStatus_Fired_Click"/>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>
                                    <Button Content="Изменить" Margin="5" Click="EditUserButton_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
