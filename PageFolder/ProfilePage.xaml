<Page x:Class="EventApp.PageFolder.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventApp.PageFolder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid Margin="20" MinWidth="500" MinHeight="300">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Аватар -->
        <Border Grid.Column="0" Width="120" Height="120" CornerRadius="60" 
                ClipToBounds="True"
                BorderBrush="Gray" BorderThickness="1" VerticalAlignment="Top">
            <Image x:Name="UserPhoto" Stretch="UniformToFill" ClipToBounds="True"/>
        </Border>

        <GridSplitter Grid.Column="1" Width="10"/>

        <!-- Информация -->
        <StackPanel Grid.Column="2">
            <Button Content="Мои мероприятия"
                    Click="ShowHistory_Click"
                              Padding="10,5"
                              HorizontalAlignment="Right"
                    Margin="0,20,0,0"/>
            <TextBlock Text="Личный кабинет" 
                       Style="{StaticResource TitleText}"                       
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="ФИО: " FontWeight="Bold" Style="{StaticResource HoverText}"/>
                <TextBlock x:Name="FullNameTb" Style="{StaticResource HoverText}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Логин: " Style="{StaticResource HoverText}"/>
                <TextBlock x:Name="LoginTb" Style="{StaticResource HoverText}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Email: " Style="{StaticResource HoverText}"/>
                <TextBlock x:Name="EmailTb" Style="{StaticResource HoverText}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Телефон: " Style="{StaticResource HoverText}"/>
                <TextBlock x:Name="PhoneTb" Style="{StaticResource HoverText}"/>

            </StackPanel>
            <Button Content="Назад"
                    Click="BackButton_Click"
                    Background="Transparent" 
                    Foreground="White"
                    FontSize="14"
                    HorizontalAlignment="Center"
                    Padding="10,5"
                    VerticalAlignment="Bottom"
                    Margin="0,140,0,10"/>
        </StackPanel>
    </Grid>
</Page>
